{% style %}
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
  .banner-content {
    max-width: {{ section.settings.content_width }}%;
  }
  @media (max-width: 768px) {
    .banner-content {
      max-width: 100%;
      padding-left: 80px;
    }
    .banner__content--mobile-top-left { justify-content: flex-start; align-items: flex-start; text-align: left; }
    .banner__content--mobile-top-center { justify-content: flex-start; align-items: center; text-align: center; }
    .banner__content--mobile-top-right { justify-content: flex-start; align-items: flex-end; text-align: right; }
    .banner__content--mobile-middle-left { justify-content: center; align-items: flex-start; text-align: left; }
    .banner__content--mobile-middle-center { justify-content: center; align-items: center; text-align: center; }
    .banner__content--mobile-middle-right { justify-content: center; align-items: flex-end; text-align: right; }
    .banner__content--mobile-bottom-left { justify-content: flex-end; align-items: flex-start; text-align: left; }
    .banner__content--mobile-bottom-center { justify-content: flex-end; align-items: center; text-align: center; }
    .banner__content--mobile-bottom-right { justify-content: flex-end; align-items: flex-end; text-align: right; }
  }
{% endstyle %}

<div class="image-banner-{{ section.id }}">
  <div class="image-banner-main">
    {% if section.settings.image != blank %}
      {% assign image_width = section.settings.image.width | divided_by: section.settings.image.aspect_ratio %}
      {{
        section.settings.image
        | image_url: width: 1975
        | image_tag: width: 1975, heights: image_width, fetchpriority: 'auto'
      }}
    {% else %}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    
    <div class="banner__content 
                banner__content--{{ section.settings.desktop_content_position }} 
                banner__content--mobile-{{ section.settings.mobile_content_position }} 
                page-width{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      <div class="banner-content text-white fs-5 content-container content-container--full-width-mobile color-{{ section.settings.color_scheme }} gradient">
        <h1>{{ section.settings.heading }}</h1>
        {% if section.settings['sub-heading'] != blank %}
          <p>{{ section.settings['sub-heading'] }}</p>
        {% endif %}
        <div class="banner-CTA">
          <div class="cta-action">
            <a href="{{ section.settings.url_1 }}" class="btn bg-btn-color text-white px-3 py-2">
              {{- section.settings.label_1 -}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "image_overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 0
    },
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "range",
      "id": "content_width",
      "label": "Content Width",
      "min": 40,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 60
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "COMFY, COZY, CHIC"
    },
    {
      "type": "richtext",
      "id": "sub-heading",
      "label": "Sub Heading",
      "default": "<p>Sustainable, Yoga clothes, Workout clothes and activewear. Handcrafted in America</p>"
    },
    {
      "type": "text",
      "id": "label_1",
      "label": "Button Label",
      "default": "SHOP MOST POPULAR STYLES"
    },
    {
      "type": "url",
      "id": "url_1",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "Desktop Content Position",
      "options": [
        { "value": "top-left", "label": "Top Left" },
        { "value": "top-center", "label": "Top Center" },
        { "value": "top-right", "label": "Top Right" },
        { "value": "middle-left", "label": "Middle Left" },
        { "value": "middle-center", "label": "Middle Center" },
        { "value": "middle-right", "label": "Middle Right" },
        { "value": "bottom-left", "label": "Bottom Left" },
        { "value": "bottom-center", "label": "Bottom Center" },
        { "value": "bottom-right", "label": "Bottom Right" }
      ],
      "default": "middle-center"
    },
    {
      "type": "select",
      "id": "mobile_content_position",
      "label": "Mobile Content Position",
      "options": [
        { "value": "top-left",
        "label": "Top Left" },
        
        { "value": "top-center",
          "label": "Top Center" },
        
        { "value": "top-right",
          "label": "Top Right" },
        
        { "value": "middle-left",
          "label": "Middle Left" },
        
        { "value": "middle-center",
          "label": "Middle Center" },
        
        { "value": "middle-right",
          "label": "Middle Right" },
        
        { "value": "bottom-left",
          "label": "Bottom Left" },
        
        { "value": "bottom-center",
          "label": "Bottom Center" },
        
        { "value": "bottom-right",
          "label": "Bottom Right" }
      ],
      "default": "middle-center"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Image Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}
